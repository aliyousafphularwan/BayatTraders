<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dash_trans_recycler_bg"
    android:padding="10dp"
    android:layout_marginVertical="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dash_trans_name"
        android:text="Name Here"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="8pt"
        android:padding="5dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receiver Amount:"
                android:id="@+id/txt_dash_trans_ra"
                android:textColor="@color/black"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dash_trans_amount"
                android:text="175.5 USD"
                android:layout_toRightOf="@id/txt_dash_trans_ra"
                android:textColor="@color/dark_grey"
                android:paddingHorizontal="5dp"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receiver Amount:"
                android:id="@+id/txt_dash_trans_pin"
                android:textColor="@color/black"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dash_trans_pin"
                android:text="FX4058495"
                android:layout_toRightOf="@id/txt_dash_trans_pin"
                android:textColor="@color/dark_grey"
                android:paddingHorizontal="5dp"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 04, 2020"
                android:id="@+id/txt_dash_trans_date"
                android:textColor="@color/dark_grey"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAID"
                android:layout_toRightOf="@id/txt_dash_trans_date"
                android:textColor="@color/white"
                android:background="@drawable/submitbtnbg"
                android:paddingHorizontal="15dp"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>