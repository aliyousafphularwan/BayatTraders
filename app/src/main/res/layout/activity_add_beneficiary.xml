<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBeneficiaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brnif_name"
            android:hint="Beneficiary Name"
            android:inputType="text"
            android:layout_marginVertical="5dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brnif_cnic"
            android:hint="Beneficiary CNIC"
            android:inputType="number"
            android:layout_marginVertical="5dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brnif_address"
            android:hint="Beneficiary Address"
            android:inputType="textLongMessage"
            android:layout_marginVertical="5dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brnif_phone"
            android:hint="Beneficiary Phone"
            android:inputType="number"
            android:layout_marginVertical="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit_beneif"
            android:text="submit"
            android:textAllCaps="false"
            android:background="@drawable/submitbtnbg"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/beneif_list"
        android:text="Beneficiary List"
        android:textAllCaps="false"
        android:background="@drawable/beneficiary_list_button"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"/>

</RelativeLayout>